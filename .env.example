# Tesseract OCR (REQUIRED - V5)
# Download from: https://github.com/UB-Mannheim/tesseract/wiki
# Or install via: winget install --id UB-Mannheim.TesseractOCR
# Default path after installation: C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# OCR Strategy (V5)
OCR_PRIMARY=tesseract
OCR_FALLBACK=none

# Poppler (for PDF rendering)
# Download from: https://github.com/oschwartz10612/poppler-windows/releases
POPPLER_BIN=

# Model and cache directories
MODEL_DIR=./models
CACHE_DIR=./cache
PADDLEOCR_MODEL_DIR=./models/paddleocr
MINERU_MODEL_DIR=./models/mineru
DOLPHIN_MODEL_DIR=./models/dolphin
MEGAPARSE_MODEL_DIR=./models/megaparse

# HuggingFace cache
HF_HOME=./cache/hf
TRANSFORMERS_CACHE=./cache/hf/transformers

# PyTorch cache
TORCH_HOME=./cache/torch

# PaddlePaddle cache
PADDLE_HOME=./cache/paddle

# OCR cache
OCR_CACHE_DIR=./cache/ocr

# GPU settings
CUDA_VISIBLE_DEVICES=0
GPU_CONCURRENCY=1
CPU_CONCURRENCY=6

# OCR settings (for PaddleOCR if used)
OCR_DEVICE=cpu
OCR_USE_MKLDNN=false
OCR_GPU_CONCURRENCY=1

# MinerU settings
MINERU_BACKEND=hybrid-auto-engine
MINERU_OCR_LANG=fin
MINERU_INLINE_FORMULA=false
MINERU_VISUALIZE=true

# Dolphin settings
DOLPHIN_MODE=off
DOLPHIN_MAX_BATCH_SIZE=4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text
